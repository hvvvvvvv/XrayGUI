<Window x:Class="NetProxyController.View.ServerManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetProxyController.View"
        xmlns:vm="clr-namespace:NetProxyController.ViewModle"
        mc:Ignorable="d"
        Title="ServerManager" Height="450" Width="800">
    <Window.DataContext>
        <vm:ServerManagerViewModle/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <ListView Height="400" ItemsSource="{Binding ServerItem}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" Header="名称" DisplayMemberBinding="{Binding Remarks}"/>
                    <GridViewColumn Width="100" Header="地址" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Width="80" Header="端口" DisplayMemberBinding="{Binding Port}"/>
                    <GridViewColumn Width="80" Header="代理协议" DisplayMemberBinding="{Binding Protocol}"/>
                    
                </GridView>
            </ListView.View>       
        </ListView>
    </StackPanel>
</Window>
