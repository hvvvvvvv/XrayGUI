<UserControl x:Class="NetProxyController.View.WebSocketSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetProxyController.View"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <GroupBox Header="WebSocket设置">
        <StackPanel Width="400">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="AcceptProxyProtocol:"/>
                <hc:TextBox Grid.Column="1"/>
                <TextBlock Text="Path:"
                           Grid.Row="1"/>
                <hc:TextBox Grid.Row="1"
                            Grid.Column="1"/>
            </Grid>
        </StackPanel>
    </GroupBox>
</UserControl>
