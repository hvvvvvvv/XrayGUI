<UserControl x:Class="NetProxyController.View.VlessVerifyInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetProxyController.View"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             Width="auto" Height="auto">
    <GroupBox Header="验证信息(Vless)">
        <Grid Width="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="用户ID(UUID):"/>
            <hc:TextBox Grid.Column="1"/>
            <TextBlock Text="流控(Flow):"
                       Grid.Row="1"/>
            <hc:ComboBox Grid.Row="1"
                         Grid.Column="1"/>
        </Grid>        
    </GroupBox>
</UserControl>
