<UserControl x:Class="NetProxyController.View.TlsSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetProxyController.View"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" >
    <StackPanel>
        <GroupBox Header="Tls设置">
            <Grid Width="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="SNI(ServerName):"/>
                <hc:TextBox Grid.Column="1"/>
                <TextBlock Text="Tls指纹:"
                           Grid.Row="1"/>
                <hc:ComboBox Grid.Row="1"
                            Grid.Column="1"/>
                <TextBlock Text="跳过证书验证:"
                           Grid.Row="2"/>
                <ToggleButton Grid.Column="1"
                              Grid.Row="2"/>
            </Grid>
        </GroupBox>
    </StackPanel>
</UserControl>
